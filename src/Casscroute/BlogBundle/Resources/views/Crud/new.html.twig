{% extends "CasscrouteBlogBundle::layout.html.twig" %}

{% block blog_body %}
    {% block crud_title %}<h2>Cr√©ation d'un article</h2>{% endblock %}

    {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
        {% if not form.vars.valid %}
            <div class="ui negative message">
                {{ form_errors(form) }}
            </div>
        {% endif %}
        <div class="field">
            <label>Titre de l'article</label>
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}})  }}
        </div>
        <div class="field">
            <label>Contenu</label>
            {{ form_widget(form.content, {'attr': {'class': 'form-control'}})  }}
        </div>
        <p>
            <i class="fa fa-info pr"></i> Pour la mise en page, vous pouvez utilser le <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet" target="_blank">markdown</a>.
        </p>
        {{ form_widget(form.Enregistrer, {'attr': {'class': 'ui button primary'}}) }}
        <a href="#" class="ui button back">Annuler</a>
    {{ form_end(form) }}

{% endblock %}
